{
    "source": {
        "base": "./source/",
        "scripts": "<%= config.source.base %>scripts/",
        "fonts": "<%= config.source.base %>fonts/",
        "images": "<%= config.source.base %>images/",
        "sass": "<%= config.source.base %>sass/"
    },
    "compass": {
        "noLineComments": true,
        "sassDir": "<%= config.source.base %>sass",
        "cssDir": "<%= config.build.css %>",
        "outputStyle": "compact",
        "fontsDir": "<%= config.source.fonts %>",
        "javascriptsDir": "<%= config.source.scripts %>",
        "imagesDir": "<%= config.source.images %>",
        "httpPath": "/"
    },
    "build": {
        "base": "./build/",
        "css": "<%= config.build.base %>css/",
        "scripts": "<%= config.build.base %>scripts/",
        "fonts": "<%= config.build.base %>fonts/",
        "images": "<%= config.build.base %>images/"
    },
    "web": {
        "port": 3000,
        "origin": "*"
    }
}